#ifndef PERSON_H_INCLUDED
#define PERSON_H_INCLUDED

class Person // start to ddclare Person class
{
    char *name;
    char *addr;

public:
    Person(const char *name, const char *addr); // Constructor
    ~Person();
    void print() const; // print out name and address
    void chAddr(const char *newAddr); // change address
};


#endif
